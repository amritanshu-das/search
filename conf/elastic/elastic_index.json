// PUT /opentech
{
  "mappings": {
    "dynamic": "strict",
    "dynamic_templates": [
      {
        "dynamic_attrs_mapping": {
          "match_mapping_type": "string",
          "path_match": "dynamic_attrs.*",
          "mapping": {
            "type": "text",
            "fields": {
              "raw": {
                "type": "keyword"
              }
            }
          }
        }
      },
      {
        "location_mapping": {
          "match_mapping_type": "string",
          "path_match": "location.*",
          "mapping": {
            "type": "text",
            "fields": {
              "raw": {
                "type": "keyword"
              }
            }
          }
        }
      },
      {
        "category_id_mapping": {
          "match_mapping_type": "string",
          "path_match": "category.*.id",
          "mapping": {
            "type": "text"
          }
        }
      },
      {
        "category_name_mapping": {
          "match_mapping_type": "string",
          "path_match": "category.*.name",
          "mapping": {
            "type": "text",
            "fields": {
              "raw": {
                "type": "keyword"
              }
            }
          }
        }
      },
      {
        "category_keyword_mapping": {
          "match_mapping_type": "string",
          "path_match": "category.*.keyword",
          "mapping": {
            "type": "text"
          }
        }
      }
    ],
    "properties": {
      "sku_id": {
        "type": "text"
      },
      "product_id": {
        "type": "text"
      },
      "item_number": {
        "type": "text"
      },
      "catalog_number": {
        "type": "text"
      },
      "brand": {
        "type": "text",
        "fields": {
          "raw": {
            "type": "keyword"
          }
        }
      },
      "available_lcs": {
        "type": "keyword"
      },
      "item_name": {
        "type": "text"
      },
      "marketing_description": {
        "type": "text"
      },
      "bullet_description": {
        "type": "text"
      },
      "item_popularity": {
        "type": "integer",
        "null_value": 1000000
      },
      "wise_avg_price": {
        "type": "float"
      },
      "images": {
        "enabled": false
      },
      "product_type": {
        "type": "keyword"
      },
      "parentCategory": {
        "properties": {
          "id": {
            "enabled": false
          },
          "name": {
            "type": "text",
            "fields": {
              "raw": {
                "type": "keyword"
              }
            }
          },
          "keywords": {
            "type": "text"
          }
        }
      },
      "dynamic_attrs": {
        "dynamic": true,
        "type": "object"
      },
      "location": {
        "dynamic": true,
        "type": "object"
      },
      "category": {
        "dynamic": true,
        "type": "object"
      }
    }
  }
}